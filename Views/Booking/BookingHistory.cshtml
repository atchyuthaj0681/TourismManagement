@model TourismManagement.Models.ViewModels.BookingListViewModel

@{
    ViewData["Title"] = "My Booking History";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Package</th>
            <th>Travel Date</th>
            <th>Booking Date</th>
            <th>Number of People</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.Package.Title</td>
                <td>@booking.TravelDate.ToString("yyyy-MM-dd")</td>
                <td>@booking.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@booking.NumPeople</td>
                <td>@booking.TotalAmount.ToString("C")</td>
                <td>
                    @if (booking.Status == "Cancelled")
                    {
                        <span class="text-danger">Cancelled</span>
                    }
                    else
                    {
                        <span class="text-success">Booked</span>
                    }
                </td>
                <td>
                    @if (booking.Status != "Cancelled" && booking.TravelDate > DateTime.Now)
                    {
                        <button class="btn btn-danger btn-sm"
                                data-toggle="modal"
                                data-target="#cancelModal"
                                data-bookingid="@booking.Id"
                                data-packagetitle="@booking.Package.Title"
                                data-traveldate="@booking.TravelDate.ToString("yyyy-MM-dd")">
                            Cancel
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="CancelBooking" method="post" id="cancelForm">
            <input type="hidden" name="id" id="bookingId" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Cancel Booking</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <p>Are you sure you want to cancel the booking for:</p>
                    <p><strong id="packageTitle"></strong> on <strong id="travelDate"></strong>?</p>
                    <p><small>A 15% cancellation penalty will apply.</small></p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No, Keep Booking</button>
                    <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $('#cancelModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var bookingId = button.data('bookingid');
            var packageTitle = button.data('packagetitle');
            var travelDate = button.data('traveldate');

            var modal = $(this);
            modal.find('#bookingId').val(bookingId);
            modal.find('#packageTitle').text(packageTitle);
            modal.find('#travelDate').text(travelDate);
        });
    </script>
}
