@model TourismManagement.Models.ViewModels.BookingFormViewModel

@{
    ViewData["Title"] = "Book a Package";
}

<style>
    .booking-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(to bottom right, #f8faff, #e6ecff);
        padding: 30px;
    }

    .booking-card {
        background-color: #ffffff;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

        .booking-card h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 700;
            font-size: 24px;
            color: #333;
        }

    .form-group label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .btn-book {
        margin-top: 20px;
        width: 100%;
        padding: 12px;
        background-color: #4b6eff;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        transition: 0.3s;
        cursor: pointer;
    }

        .btn-book:hover {
            background-color: #3754d1;
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="booking-container">
    <div class="booking-card">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="BookNow" method="post">
            <div class="form-group mb-3">
                <label asp-for="PackageId"></label>
                <select asp-for="PackageId" class="form-control" asp-items="@(new SelectList(Model.AvailablePackages, "Id", "Title", Model.PackageId))">
                    <option value="">-- Choose Package --</option>
                </select>
                <span asp-validation-for="PackageId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TravelDate"></label>
                <input asp-for="TravelDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="TravelDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumPeople"></label>
                <input asp-for="NumPeople" class="form-control" type="number" min="1" />
                <span asp-validation-for="NumPeople" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-book">Book Now</button>
        </form>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
