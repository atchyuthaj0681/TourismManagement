@model TourismManagement.Models.Destination

@{
    ViewData["Title"] = "Edit Destination";
}

<h1>Edit Destination</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BestTimeToVisit"></label>
        <input asp-for="BestTimeToVisit" class="form-control" />
        <span asp-validation-for="BestTimeToVisit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationDays"></label>
        <input asp-for="DurationDays" type="number" class="form-control" min="0" />
        <span asp-validation-for="DurationDays" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<hr />

<!-- GALLERY + UPLOAD -->
<div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
    <h2>Gallery</h2>

    <!-- Upload Form -->
    <form asp-action="UploadImages" asp-controller="Destinations" method="post" enctype="multipart/form-data" style="display: flex; align-items: center; gap: 10px;">
        <input type="hidden" name="id" value="@Model.Id" />

        <input type="file" name="images" id="fileInput" multiple accept=".jpg,.jpeg,.png,.gif" style="display: none;" onchange="document.getElementById('fileLabel').innerText = this.files.length + ' file(s) selected';" />

        <button type="button" class="btn btn-outline-success" onclick="document.getElementById('fileInput').click();">Select Images</button>
        <span id="fileLabel" style="min-width: 150px;"></span>
        <button type="submit" class="btn btn-primary">Upload Images</button>
    </form>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (Model.Images != null && Model.Images.Any())
{
    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-3 mb-3">
                <img src="@image.ImageUrl" alt="Destination Image" class="img-thumbnail" style="max-height:150px; width: 100%; object-fit: cover;" />
            </div>
        }
    </div>
}
else
{
    <p>No images uploaded yet.</p>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
