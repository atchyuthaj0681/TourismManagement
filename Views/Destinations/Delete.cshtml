@model TourismManagement.Models.Destination

@{
    ViewData["Title"] = "Delete Destination";
}

<h2>Delete Destination</h2>

<h3>Are you sure you want to delete this destination?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Best Time to Visit</dt>
        <dd class="col-sm-10">@Model.BestTimeToVisit</dd>

        <dt class="col-sm-2">Duration (Days)</dt>
        <dd class="col-sm-10">@Model.DurationDays</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
