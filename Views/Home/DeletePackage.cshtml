@model TourismManagement.Models.Package

@{
    ViewData["Title"] = "Delete Package";
}

<h2>Delete Package</h2>

<h3>Are you sure you want to delete this package?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Duration (Days)</dt>
        <dd class="col-sm-10">@Model.DurationDays</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeletePackage" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Packages" class="btn btn-secondary">Cancel</a>
</form>
