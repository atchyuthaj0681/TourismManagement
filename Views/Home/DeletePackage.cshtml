@model TourismManagement.Models.Package

@{
    ViewData["Title"] = "Delete Package";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        min-height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    /* Modern Confirmation Card */
    .delete-card {
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        overflow: hidden;
    }

    /* Dark Card Header */
    .card-header-custom {
        background-color: #343a40; /* Dark header for a serious tone */
        padding: 1.5rem 2rem;
    }

        .card-header-custom h2 {
            color: white;
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0;
        }

    /* Card Body */
    .card-body-custom {
        padding: 2rem;
    }

    .confirmation-message {
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 1.5rem;
    }

    /* Details List */
    .package-details-list {
        list-style: none;
        padding: 0;
        margin: 0;
        border-top: 1px solid #dee2e6;
    }

        .package-details-list li {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #dee2e6;
        }

    .detail-label {
        font-weight: 600;
        color: #495057;
    }

    .detail-value {
        color: #212529;
    }

    .package-title-display {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 2rem;
        border: 1px solid #dee2e6;
    }

        .package-title-display h4 {
            margin: 0;
            font-weight: 700;
            font-size: 1.5rem;
            color: #343a40;
        }


    /* Action Buttons Container */
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #dee2e6;
    }

    .btn {
        flex-grow: 1;
        padding: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
    }
</style>

<div class="delete-container">
    <div class="delete-card">
        <div class="card-header-custom">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body-custom">
            <h3 class="confirmation-message">Are you sure you want to permanently delete this package?</h3>

            <div class="package-title-display">
                <h4>@Model.Title</h4>
            </div>

            <ul class="package-details-list">
                <li>
                    <span class="detail-label">Destination</span>
                    <span class="detail-value">@Model.Destination</span>
                </li>
                <li>
                    <span class="detail-label">Duration (Days)</span>
                    <span class="detail-value">@Model.DurationDays</span>
                </li>
                <li>
                    <span class="detail-label">Price</span>
                    <span class="detail-value">@Model.Price.ToString("C")</span>
                </li>
                <li>
                    <span class="detail-label">Status</span>
                    <span class="detail-value">@Model.Status</span>
                </li>
            </ul>

            <form asp-action="DeletePackage" method="post" class="form-actions">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Packages" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Yes, Delete Package</button>
            </form>
        </div>
    </div>
</div>