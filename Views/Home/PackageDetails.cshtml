@model TourismManagement.Models.Package

@{
    ViewData["Title"] = "Package Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mainImage = Model.ImagePaths?.FirstOrDefault() ?? "~/images/no-image-available.png";
}

<style>
    /* New container to hold the two-column layout */
    .package-details-container {
        display: flex;
        gap: 2rem;
        padding: 2rem;
        background-color: #222426; /* Dark background color */
        color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        min-height: 80vh;
    }

    /* Left sidebar for package details */
    .details-sidebar {
        flex: 0 0 400px;
        background-color: #2c2f33; /* Slightly lighter background */
        color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
    }

    .sidebar-header h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffc107;
    }

    .sidebar-header p {
        font-size: 1rem;
        margin-top: 10px;
        line-height: 1.5;
        color: #aaa;
    }

    .main-image-content {
        flex: 1;
        position: relative;
        background-size: cover;
        background-position: center;
        background-image: url('@Url.Content(mainImage)');
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .main-image-content::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: 0;
            border-radius: 8px;
        }

    .btn-action {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        padding: 10px 30px;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-action:hover {
            background: rgba(255, 255, 255, 0.4);
            transform: translateY(-2px);
        }

    /* Image Gallery Styles */
    .image-gallery-container {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #4a4d57;
    }

        .image-gallery-container h5 {
            color: #aaa;
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .image-gallery img {
        width: 80px;
        height: 60px;
        object-fit: cover;
        border-radius: 5px;
        cursor: pointer;
        border: 2px solid transparent;
        transition: all 0.2s ease;
    }

        .image-gallery img:hover, .image-gallery img.active {
            border-color: #ffc107;
            transform: scale(1.1);
        }
</style>

<div class="package-details-container">
    <div class="details-sidebar">
        <div class="sidebar-header">
            <h1 class="mt-2">@Model.Title</h1>
            <p>@Model.Description</p>
            <p class="mt-4">
                <strong>Destination:</strong> @Model.Destination<br>
                <strong>Duration:</strong> @Model.DurationDays days<br>
                <strong>Price:</strong> @Model.Price.ToString("C")
            </p>

            <a href="/Booking/BookNow?packageId=@Model.Id" class="btn btn-primary mt-4">Book Now</a>
        </div>

        <div class="image-gallery-container mt-auto">
            <h5>Image Gallery</h5>
            <div class="image-gallery d-flex overflow-auto mt-3" style="gap: 10px;">
                @foreach (var imgPath in Model.ImagePaths)
                {
                    <img src="@Url.Content(imgPath)" class="rounded" onclick="changeMainImage('@Url.Content(imgPath)', this)">
                }
            </div>
        </div>
    </div>

    <div class="main-image-content" id="mainImageContent">
        <div class="position-absolute top-0 end-0 m-3 z-3">
            <a href="/Home/Packages" class="btn-action">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function changeMainImage(imageUrl, element) {
            document.getElementById('mainImageContent').style.backgroundImage = 'url(' + imageUrl + ')';

            // Remove active class from all images
            document.querySelectorAll('.image-gallery img').forEach(img => {
                img.classList.remove('active');
            });
            // Add active class to the clicked image
            element.classList.add('active');
        }

        // Set the first image as active by default on load
        document.addEventListener('DOMContentLoaded', function() {
            const firstImage = document.querySelector('.image-gallery img');
            if (firstImage) {
                firstImage.classList.add('active');
                changeMainImage(firstImage.src, firstImage);
            }
        });
    </script>
}