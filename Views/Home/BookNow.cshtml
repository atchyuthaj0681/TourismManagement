@model TourismManagement.Models.Booking

<h2>Book Now</h2>

<form asp-action="BookNow" method="post">
    <div class="form-group">
        <label asp-for="PackageId"></label>
        <select asp-for="PackageId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Packages, "Id", "Title"))">
            <option value="">-- Select Package --</option>
        </select>
        <span asp-validation-for="PackageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TourDate"></label>
        <input asp-for="TourDate" type="date" class="form-control" />
        <span asp-validation-for="TourDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfPeople"></label>
        <input asp-for="NumberOfPeople" type="number" class="form-control" min="1" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
