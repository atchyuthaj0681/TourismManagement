@model IEnumerable<TourismManagement.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't made any bookings yet.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Package</th>
                <th>Destination</th>
                <th>Tour Date</th>
                <th>People</th>
                <th>Total Price</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Package?.Title</td>
                    <td>@booking.Package?.Destination</td>
                    <td>@booking.TourDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.NumberOfPeople</td>
                    <td>₹@booking.TotalPrice.ToString("F2")</td>
                    <td>@booking.PaymentStatus</td>
                    <td>
                        @if (booking.BookingStatus == "Cancelled")
                        {
                            <span class="text-danger">@booking.BookingStatus</span>
                        }
                        else
                        {
                            <span class="text-success">@booking.BookingStatus</span>
                        }
                    </td>
                    <td>
                        @if (booking.BookingStatus == "Confirmed")
                        {
                            <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
