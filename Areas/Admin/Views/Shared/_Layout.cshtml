@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            overflow-x: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8; /* Light blue-gray background */
            color: #212529; /* Bootstrap body text color */
        }

        nav.navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 56px;
            z-index: 1030;
            background-color: #ffffff; /* White navbar */
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            border-bottom: 1px solid #dee2e6;
        }

            nav.navbar .navbar-brand {
                color: #0d6efd; /* Bootstrap primary */
                font-weight: 700;
                font-size: 1.3rem;
                padding-left: 1.5rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                nav.navbar .navbar-brand:hover {
                    color: #0a58ca;
                    text-decoration: none;
                }

        .sidebar {
            position: fixed;
            top: 56px; /* below navbar */
            bottom: 0;
            left: 0;
            width: 240px;
            background-color: #ffffff;
            padding-top: 1.5rem;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
            transition: width 0.3s ease;
            overflow-y: auto;
            z-index: 1020;
            border-right: 1px solid #dee2e6;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #495057; /* Bootstrap secondary text */
                padding: 14px 24px;
                font-weight: 600;
                font-size: 1rem;
                text-decoration: none;
                border-left: 4px solid transparent;
                transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
                white-space: nowrap;
            }

                .sidebar a i {
                    margin-right: 16px;
                    font-size: 1.2rem;
                    width: 24px;
                    text-align: center;
                    color: #6c757d; /* Bootstrap gray */
                    transition: color 0.2s ease;
                }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #e7f1ff; /* Light primary blue background */
                    border-left-color: #0d6efd; /* Bootstrap primary */
                    color: #0d6efd;
                }

                    .sidebar a:hover i,
                    .sidebar a.active i {
                        color: #0d6efd;
                    }

        .content {
            margin-left: 240px;
            padding: 2.5rem 3rem;
            flex-grow: 1;
            min-height: 100vh;
            margin-top: 56px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.1); /* subtle primary color shadow */
            transition: margin-left 0.3s ease;
        }

            .content h2 {
                font-weight: 700;
                color: #212529;
                margin-bottom: 1.5rem;
                font-size: 2rem;
            }

        hr {
            border-color: #dee2e6;
            margin-bottom: 2.5rem;
        }

        /* Responsive: collapse sidebar on smaller screens */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 70px;
            padding-top: 1rem;
        }

        .sidebar a {
            justify-content: center;
            padding: 12px 0;
        }

            .sidebar a i {
                margin-right: 0;
            }

            .sidebar a span {
                display: none;
            }

        .content {
            margin-left: 70px;
            padding: 2rem 1.5rem;
        }

        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            <i class="fa-solid fa-cogs"></i> Admin Panel
        </a>
    </nav>

    <div class="sidebar">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")" aria-current="page">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>

        <a asp-area="Admin" asp-controller="Packages" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Packages" ? "active" : "")">
            <i class="fas fa-box-open"></i>
            <span>Packages</span>
        </a>

        <a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Bookings" ? "active" : "")">
            <i class="fas fa-book"></i>
            <span>Bookings</span>
        </a>
    </div>

    <main class="content">
        <h2>@ViewData["Title"]</h2>
        <hr />
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
