@model TourismManagement.Models.Booking

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<div class="card shadow-sm p-4">
    <form asp-area="Admin" asp-controller="Bookings" asp-action="Edit" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UserId"></label>
            <input asp-for="UserId" class="form-control" placeholder="User ID" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookingDate"></label>
            <input asp-for="BookingDate" class="form-control" type="date" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TourDate"></label>
            <input asp-for="TourDate" class="form-control" type="date" />
            <span asp-validation-for="TourDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfPeople"></label>
            <input asp-for="NumberOfPeople" class="form-control" type="number" min="1" />
            <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TotalPrice"></label>
            <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TotalPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PaymentStatus"></label>
            <select asp-for="PaymentStatus" class="form-control">
                <option value="">-- Select Payment Status --</option>
                <option value="Paid" selected="@Model.PaymentStatus == " Paid"">Paid</option>
                <option value="Pending" selected="@Model.PaymentStatus == " Pending"">Pending</option>
                <option value="Refunded" selected="@Model.PaymentStatus == " Refunded"">Refunded</option>
            </select>
            <span asp-validation-for="PaymentStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookingStatus"></label>
            <select asp-for="BookingStatus" class="form-control">
                <option value="">-- Select Booking Status --</option>
                <option value="Confirmed" selected="@Model.BookingStatus == " Confirmed"">Confirmed</option>
                <option value="Cancelled" selected="@Model.BookingStatus == " Cancelled"">Cancelled</option>
                <option value="Completed" selected="@Model.BookingStatus == " Completed"">Completed</option>
            </select>
            <span asp-validation-for="BookingStatus" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
