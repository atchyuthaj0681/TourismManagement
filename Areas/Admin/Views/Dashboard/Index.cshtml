@model TourismManagement.Models.ViewModels.DashboardViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text display-4">@Model.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Bookings</h5>
                <p class="card-text display-4">@Model.TotalBookings</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Destinations</h5>
                <p class="card-text display-4">@Model.TotalDestinations</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Total People Traveled</h5>
                <p class="card-text display-4">@Model.TotalPeople</p>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-5 mb-3">📊 Bookings by Destination</h3>

@if (Model.BookingCountByDestination != null && Model.BookingCountByDestination.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Booking Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookingCountByDestination)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No booking data available to display.</div>
}
